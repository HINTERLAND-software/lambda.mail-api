{
  "name": "api-mail",
  "version": "2.0.0",
  "description": "Serverless aws lambda endpoint to deliver mails",
  "main": "handler.js",
  "private": true,
  "author": "jroehl",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write **/*",
    "test": "npm run lint && node handler.js && npm run jest",
    "start:offline": "serverless offline --port 6060 start",
    "upsert:template": "node bin/upsert-template.js",
    "jest": "jest",
    "deploy": "serverless deploy -s dev",
    "deploy:prod": "serverless deploy -s production",
    "logs": "serverless logs -s dev -f sendmail",
    "logs:prod": "serverless logs -s production -f sendmail"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "prettier": "^1.15.3",
    "serverless": "^1.36.0",
    "serverless-domain-manager": "^2.6.11",
    "serverless-offline": "^3.32.2",
    "serverless-plugin-aws-alerts": "^1.2.4",
    "serverless-plugin-include-dependencies": "^3.2.1"
  },
  "dependencies": {
    "aws-sdk": "^2.387.0"
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ]
  }
}
