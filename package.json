{
  "name": "api-mail",
  "version": "3.0.0",
  "description": "Serverless aws lambda endpoint to deliver mails from contact forms",
  "main": "handler.js",
  "private": false,
  "author": "jroehl <mail@johannroehl.de>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write **/*",
    "test": "npm run lint && npm run jest",
    "start:offline": "npm run parse:environment && serverless offline --httpPort 6060 start",
    "start:offline:prod": "npm run parse:environment && serverless offline --httpPort 6060 -s production start",
    "upsert:template": "ts-node bin/upsert-template.ts",
    "parse:environment": "CREATE_CONFIG_FILE=1 ts-node bin/parse-environment.ts",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "deploy": "npm run parse:environment && serverless deploy -s dev --conceal",
    "deploy:prod": "npm run parse:environment && serverless deploy -s production --conceal",
    "logs": "serverless logs -s dev -f sendmail",
    "logs:prod": "serverless logs -s production -f sendmail"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.51",
    "@types/dompurify": "^2.0.1",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/node": "^13.13.4",
    "jest": "^25.5.3",
    "jest-cli": "^25.5.2",
    "prettier": "^2.0.5",
    "serverless": "^1.69.0",
    "serverless-domain-manager": "^3.3.2",
    "serverless-offline": "^6.1.4",
    "serverless-plugin-aws-alerts": "^1.4.0",
    "serverless-webpack": "^5.3.1",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "aws-sdk": "^2.667.0",
    "change-case": "^4.1.1",
    "dompurify": "^2.0.10",
    "dotenv": "^8.2.0",
    "jsdom": "^16.2.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.9.1"
  }
}
