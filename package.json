{
  "name": "jr-mailer",
  "version": "0.0.1",
  "description": "Serverless aws lambda endpoint to deliver mails",
  "main": "handler.js",
  "private": true,
  "author": "jroehl",
  "license": "MIT",
  "scripts": {
    "test": "eslint **/*.js && node handler.js",
    "deploy": "npm test && serverless deploy",
    "deploy-prod": "npm test && serverless deploy -s production",
    "logs": "serverless logs -s dev -f sendmail",
    "logs-prod": "serverless logs -s production -f sendmail",
    "invoke": "serverless invoke -s dev -f sendmail -p tests/data.json",
    "invoke-prod": "serverless invoke -s production -f sendmail -p tests/data.json"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "serverless": "^1.9.0",
    "serverless-plugin-include-dependencies": "^2.0.0"
  },
  "dependencies": {
    "nodemailer": "^3.1.8"
  }
}
