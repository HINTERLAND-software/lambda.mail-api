{
  "name": "lambda-mail-api",
  "version": "4.0.0",
  "description": "Serverless aws lambda endpoint to deliver mails from contact forms",
  "main": "handler.js",
  "private": false,
  "author": "jroehl <mail@hinterland.software>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write **/*",
    "test": "npm run lint && npm run jest",
    "start:offline": "serverless offline --httpPort 6060 start",
    "upsert:template": "ts-node bin/upsert-template.ts",
    "upsert:ssm": "ts-node bin/upsert-ssm.ts",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "deploy": "serverless deploy --conceal",
    "logs": "serverless logs -f sendmail"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "jest": "^25.5.4",
    "jest-cli": "^26.4.2",
    "prettier": "^2.1.1",
    "serverless": "^1.83.0",
    "serverless-domain-manager": "^4.2.0",
    "serverless-offline": "^6.7.0",
    "serverless-plugin-aws-alerts": "^1.6.1",
    "serverless-webpack": "^5.3.4",
    "ts-jest": "^25.5.1",
    "ts-loader": "^8.0.3",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "aws-sdk": "^2.747.0",
    "change-case": "^4.1.1",
    "dotenv": "^8.2.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "xss": "^1.0.8"
  }
}
